# PATH
export PATH=/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# PS1 '\xe2\x9d\xb1' '\[\e]2;bash\a\]'
export PS1='\[\e[0m\]\W\[\e[2m\]$(__git_ps1 " (%s)")\[\e[0m\] ‚ù± '
export PS1='\[\e[0m\]\W\[\e[2m\]$(__git_ps1 " (%s)")\[\e[0m\] \$ '

# bash options
set -o vi
set -o ignoreeof

# bash history
HISTCONTROL=ignoreboth
HISTIGNORE='ls:clear'

# bash completion
. /etc/bash_completion

# git prompt
. /etc/bash_completion.d/git-prompt

# git prompt config
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWUPSTREAM=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
export GIT_PS1_SHOWSTASHSTATE=1
export GIT_PS1_STATESEPARATOR=

# npm completion
. /etc/bash_completion.d/npm-completion

# aliases
alias r='fc -s'
alias l='ls'
alias sl='ls'
alias la='ls -a'
alias ll='ls -l'
alias ls='ls -h --color=auto'
alias free='free -hw'
alias vmstat='vmstat -w 1'
